<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.liuyanzhao.blog.mapper.custom.LinkMapperCustom" >


    <sql id="link_table_all_columns">
        link_id,
        link_url,
        link_name,
        link_image,
        link_description,
        link_owner_nickname,
        link_owner_contact,
        link_update_time,
        link_create_time,
        link_order,
        link_status
    </sql>

    <select id="countLink" resultType="Integer">
        SELECT COUNT(*) FROM `link`
        <where>
            <if test="status!=null">
                link_status=#{status}
            </if>
        </where>
    </select>

    <!--获取链接列表-->
    <select id="listLink" resultType="com.liuyanzhao.blog.entity.custom.LinkCustom">
        SELECT
        <include refid="link_table_all_columns"/>
        FROM  `link`
        <where>
            <if test="status!=null">
                link_status=#{status}
            </if>
        </where>
        ORDER BY link_status ASC,link_order DESC,link_id ASC
    </select>




</mapper>


